<h1><%= @book.title %></h1>
<h1><%= "by #{@book.author}"  %></h1>
<h2><%= @book.genre %></h2>
<h1><%= "*" * @book.rating %></h1>

<!-- if statement so if the book can only be added if it's not in the bookshelf -->
<h2><% if current_user.books.exclude? @book  %></h2>

<!-- If the book is not on the bookshelf or on the reading list you can add it to either -->
<h2><%= link_to "add_to_my_bookshelf",add_to_my_bookshelf_book_path(@book) %></h2>
<h2><%= link_to "add_to_my_reading_list",add_to_my_reading_list_book_path(@book) %></h2>
<!-- If is is on the reading list you can add to bookshelf(changes have_or_want to true) or can remove from reading list (delete user_book instance) -->
<% elsif  @book.have_read = false %>

<%= link_to "add_to_my_bookshelf", add_to_my_bookshelf_book_path(@book)%></h2>

<% else %>
  <%= link_to "Remove from Bookshelf", remove_from_my_bookshelf_book_path(@book) %>
<% end %>

<h2><% @book.users do |user| %></h2>
<h2><%= user.email %></h2>
<% end %>

<h3><%= @book.have_read ? "You have read this book" : "You have not read this book" %></h3>
<% @book.comments.each do |comment| %></h3>
<h3><%= comment.content %></h3>
<% end %>
<h2><%= link_to "Review this book", new_book_comment_path(@book) %></h2>
<h2><%= link_to "Edit this book", edit_book_path %></h2>
<h2><%= link_to "Back to Library", books_path %></h2>
<h2> <%= link_to "My Bookshelf", my_books_books_path %> </h2>
