<%= form_for @book do |f| %>

<% if @book.errors.any? %>
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>


<%= f.label :title, "Enter title" %>
<%= f.text_field :title %>
<%= f.label :author, "Enter author" %>
<%= f.text_field :author %>
<%= f.label :genre, "Select genre" %>
<%= f.select :genre, ['Sci-fi', 'Fantasy', 'other'] %>
<%= f.label :rating, "Enter rating" %>
<%= f.text_field :rating %>
<%= f.label "I have read this book" %>
<%= f.check_box :have_read %>
<%= f.submit %>
<% end %>
